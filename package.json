{
  "name": "ffb-backend",
  "version": "2.0.0",
  "description": "ffb-Backend",
  "author": "David Harrison <dcharris@ucsc.edu>, Juan Lee <jlee543@ucsc.edu>",
  "license": "UNLICENSED",
  "repository": "none",
  "devDependencies": {
    "eslint": "*",
    "eslint-config-google": "*",
    "jest": "*",
    "supertest": "*"
  },
  "dependencies": {
    "bcrypt": "*",
    "body-parser": "*",
    "cors": "*",
    "debug": "^4.3.4",
    "dotenv": "*",
    "express": "*",
    "express-openapi-validator": "*",
    "express-session": "*",
    "js-yaml": "*",
    "jsonwebtoken": "*",
    "nodemon": "^2.0.16",
    "pg": "*",
    "react-dom": "^17.0.2",
    "swagger-ui-express": "*"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/server.js"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "eslintConfig": {
    "extends": [
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "indent": [
        "warn",
        2
      ]
    }
  },
  "engines": {
    "node": "12.18.4"
  },
  "scripts": {
    "start": "nodemon src/server.js",
    "test": "jest --runInBand --coverage --verbose --forceExit",
    "lint": "./node_modules/.bin/eslint . --ext .js",
    "heroku-postbuild": "npm install --prefix client && npm run build --prefix client"
  }
}
